<assembly>
	<id>ant-src</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
				<include>build.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src</directory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>src/main/webapp/js/Jsonix</outputDirectory>
			<includes>
				<include>org.hisrc.jsonix:jsonix-scripts:js:all:*</include>
			</includes>
			<outputFileNameMapping>Jsonix${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>org.hisrc.jsonix:jsonix</include>
				<include>com.sun.xml.bind:jaxb-impl</include>
				<include>com.sun.xml.bind:jaxb-xjc</include>
				<include>org.jvnet.jaxb2_commons:jaxb2-basics-ant</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<files>
		<file>
			<source>${basedir}/project-build.xml</source>
			<destName>build.xml</destName>
		</file>
		<file>
			<source>${basedir}/ant.classpath</source>
			<destName>.classpath</destName>
		</file>
		<file>
			<source>${basedir}/ant.project</source>
			<destName>.project</destName>
		</file>
	</files>
</assembly>
