<assembly>
	<id>maven-src</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src</directory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/project-pom.xml</source>
			<destName>pom.xml</destName>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${basedir}/maven.classpath</source>
			<destName>.classpath</destName>
		</file>
		<file>
			<source>${basedir}/maven.project</source>
			<destName>.project</destName>
		</file>
	</files>
</assembly>
